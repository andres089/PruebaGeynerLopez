@model IEnumerable<FrontEnd.Models.Estudiante>

<table id="datatable-responsive" class="table table-striped table-bordered nowrap dataTable no-footer" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Documento</th>
            <th>Nombre</th>           
            <th>Teléfono</th>
            <th style="width:10px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Documento
                    </td>
                    <td>
                        @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(string.Concat(item.Nombre))
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>                                     
                    <td style="text-align:center; width:10px">
                        <a class="lnkEdit" data-id="@item.IdEstudiante" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                    </td>                    
                </tr>
            }
        }
    </tbody>
</table>


