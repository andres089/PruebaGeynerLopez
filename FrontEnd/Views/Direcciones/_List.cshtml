@model IEnumerable<Prueba.Negocio.Entidades.Direcciones>

<table id="datatable-responsive" class="table table-striped table-bordered nowrap dataTable no-footer" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width:10px"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Direccion
                </td>

                <td style="text-align:center; width:10px">
                    <a class="lnkEdit" data-id="@item.IdDireccion" href="javascript:void(0)"><b class="fa fa-pencil-square"></b></a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>


